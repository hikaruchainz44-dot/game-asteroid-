            position: relative;
            width: 800px;
            max-width: 95vw;
            margin-bottom: 20px;
        }
        
        canvas {
            background-color: #0a1929;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            display: block;
            margin: 0 auto;
        }
        
        .game-ui {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            width: 800px;
            max-width: 95vw;
        }
        
        .score-container, .lives-container {
            background-color: rgba(15, 32, 39, 0.8);
            padding: 15px 25px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }
        
        .score-container {
            color: #4facfe;
        }
        
        .lives-container {
            color: #ff6b6b;
        }
        
        .controls {
            background-color: rgba(15, 32, 39, 0.8);
            padding: 15px 25px;
